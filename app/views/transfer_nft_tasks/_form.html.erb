<%= form_for task do |form| %>
  <%= form.hidden_field :type, value: 'TransferNftTask' %>
  <%= form.hidden_field :collection_id %>
  <% (token_ids || []).each do |token_id| %>
    <%= form.hidden_field :token_ids, multiple: true, value: token_id %>
  <% end %>

  <div class="mb-4">
    <%= form.label :recipient_id, class: "block mb-2" %>
    <%= form.text_field :recipient_id, required: true, placeholder: 'Mixin ID / UUID', class: "block w-full rounded bg-slate-500/10 border-0 focus:ring-0 py-5" %>
  </div>

  <div class="mt-8 flex justify-center items-center space-x-4">
    <%= form.submit 'Confirm', class: "bg-primary px-6 py-2 rounded text-white cursor-pointer opacity-90 hover:opacity-100" %>
  </div>
<% end %>
