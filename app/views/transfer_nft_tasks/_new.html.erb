<%= turbo_stream.update "modal-slot" do %>
  <%= render "shared/modal" do |partial| %>
    <% partial.content_for :title do %>
      Transfer NFT
    <% end %>

    <% partial.content_for :content do %>
      <div class="font-bold mb-4">
        You are transfering <%= params[:identifiers].size %> NFTs
      </div>
      <%= render 'transfer_nft_tasks/form', 
        task: TransferNftTask.new(collection_id: params[:collection_id]), 
        identifiers: params[:identifiers] %>
    <% end %>
  <% end %>
<% end %>
