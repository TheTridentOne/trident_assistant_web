<tr class="hover:bg-zinc-50 border-zinc-100 dark:hover:bg-zinc-800 border-b dark:border-zinc-800">
  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <div class="flex items-center space-x-2">
      <%= image_tag item.icon_url, class: "block w-10 h-10 rounded-full" %>
      <span><%= item.name %></span>
    </div>
  </td>
  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <div class="font-bold">
      <%= item.collection&.name || '-' %>
    </div>
    <div class="text-sm">
      #<%= item.identifier %>
    </div>
  </td>

  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <div class="flex items-center space-x-2">
      <%= link_to 'Trident', "https://thetrident.one/collectibles/#{item.metahash}", target: "_blank" if item.minted? %>
    </div>
  </td>
</tr>
