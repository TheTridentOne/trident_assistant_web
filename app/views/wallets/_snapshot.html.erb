<tr class="hover:bg-zinc-50 border-zinc-100 dark:hover:bg-zinc-800 border-b dark:border-zinc-800">
  <td class="p-4">
    <%= snapshot['type'] %>
  </td>
  <td class="p-4">
    <% asset = MixinAsset.find_or_create_by(id: snapshot['asset_id']) %>
    <div class="flex items-center space-x-2">
      <%= image_tag asset.icon_url, class: "w-10 w-10 rounded-full" %>
      <span><%= snapshot['amount'] %></span>
      <span><%= asset.symbol %></span>
    </div>
  </td>
  <td class="p-4 ">
    <div class="w-40 break-words">
      <%= snapshot['memo'].presence || '-' %>
    </div>
  </td>
  <td class="p-4 text-center">
    <%= snapshot['opponent_id'] || '-' %>
  </td>
  <td class="p-4">
    <%= snapshot['created_at'] || '-' %>
  </td>
  <td class="p-4">
    <%= link_to snapshot['snapshot_id'], "https://mixin.one/snapshots/#{snapshot['snapshot_id']}", target: "_blank" %>
  </td>
  <td class="p-4">
    <%= snapshot['trace_id'] || '-' %>
  </td>
</tr>
