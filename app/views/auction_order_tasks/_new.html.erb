<%= turbo_stream.update "modal-slot" do %>
  <%= render "shared/modal" do |partial| %>
    <% partial.content_for :title do %>
      New Auction
    <% end %>

    <% partial.content_for :content do %>
      <div class="mb-4 font-bold">
        You are auctioning <%= params[:identifiers].size %> NFTs
      </div>
      <%= render 'auction_order_tasks/form', 
        task: AuctionOrderTask.new(collection_id: params[:collection_id]), 
        identifiers: params[:identifiers] %>
    <% end %>
  <% end %>
<% end %>
