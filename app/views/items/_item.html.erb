<tr>
  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <%= image_tag item.icon_url, class: "w-12 h-12 block mx-auto" %>
  </td>
  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <%= item.name %>
  </td>

  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <div class="">
      <%= item.collection.name %>
    </div>
    <div class="">
      #<%= item.identifier %>
    </div>
  </td>

  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <div class="flex items-center space-x-2">
      <%= link_to 'Detail', "https://thetrident.one/collectibles/#{item.metahash}", target: "_blank" %>
      <% case @type %>
      <% when 'listed', 'airdrop' %>
        <%= button_to 'Withdraw', 
          collection_item_withdraw_path(item.collection_id, item.id), 
          form: {
            data: {
              turbo_confirm: 'Are you sure to withdraw NFT?'
            }
          },
          class: "" %>
      <% when 'wallet' %>
        <%= button_to 'Deposit', 
          collection_item_deposit_path(item.collection_id, item.id), 
          form: {
            data: {
              turbo_confirm: 'Are you sure to deposit NFT?'
            }
          },
          class: "" %>
      <% when 'on_sale' %>
        <%= link_to 'Orders',
        collection_orders_path(item.collection_id, metahash: item.metahash, type: :ask, state: :open),
        class: "" %>
      <% when 'on_auction' %>
        <%= link_to 'Orders',
        collection_orders_path(item.collection_id, metahash: item.metahash, type: :auction, state: :open),
        class: "" %>
      <% end %>
    </div>
  </td>
</tr>
