<%= render "collections/header", collection: @collection %>

<div class="mb-4">
  <%= render "items/query" %>
</div>

<div class="">
  <% if @items.blank? %>
    <div class="p-4 text-center opacity-70">- No records -</div>
  <% else %>
    <table class="mb-4 border-collapse w-full border border-slate-400 dark:border-slate-500 bg-white dark:bg-slate-800 text-sm shadow-sm">
      <thead class="bg-slate-50 dark:bg-slate-700">
        <tr>
          <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">
            Icon
          </th>
          <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">
            Name
          </th>
          <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">
            Collection
          </th>
          <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">
            Actions
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "items/item", collection: @items %>
      </tbody>
    </table>
    <div class="flex items-center justify-center">
      <%= link_to 'Prev Page', collection_items_path(@collection.id, type: @type, page: @previous_page) if @previous_page.present? %>
      <%= link_to 'Next Page', collection_items_path(@collection.id, type: @type, page: @next_page) if @next_page.present? %>
    </div>
  <% end %>
</div>
