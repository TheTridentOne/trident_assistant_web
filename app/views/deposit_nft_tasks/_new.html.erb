<%= turbo_stream.update "modal-slot" do %>
  <%= render "shared/modal" do |partial| %>
    <% partial.content_for :title do %>
      Deposit NFT
    <% end %>

    <% partial.content_for :content do %>
      <div class="">
        You are depositing <%= params[:identifiers].size %> NFTs
      </div>
      <%= render 'deposit_nft_tasks/form', 
        task: DepositNftTask.new(collection_id: params[:collection_id]), 
        identifiers: params[:identifiers] %>
    <% end %>
  <% end %>
<% end %>
