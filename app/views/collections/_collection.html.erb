<tr>
  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <%= image_tag collection.icon_url, class: "w-12 h-12 block mx-auto" %>
  </td>

  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <%= collection.name %>
  </td>

  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <div class="flex items-center space-x-2">
      <div class="w-2 h-2 rounded-full
        <%= {
          drafted: 'bg-blue-500',
          listed: 'bg-green-500'
        }[collection.state.to_sym] %>"></div>
      <div><%= collection.state %></div>
    </div>
  </td>

  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <%= collection.items.count %>
  </td>
  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <div class="flex items-center space-x-2">
      <%= link_to 'Trident', collection.trident_url, class: "", target: "_blank" if collection.listed? %>
      <%= button_to 'List', collection_list_path(collection.id), class: "", form: { data: { turbo_confirm: 'Are you sure to list this collection?' }} if collection.drafted? %>
      <%= button_to 'Delete', collection_path(collection.id), method: :delete, class: "", form: { data: { turbo_confirm: 'Are you sure to delete this collection?' }} if collection.drafted? %>
      <%= link_to 'Edit', edit_collection_path(collection.id), class: "" %>
      <%= link_to 'Attachments', collection_attachments_path(collection_id: collection.id), class: "" %>
      <%= link_to 'Items', items_path(collection_id: collection.id), class: "" %>
      <%= link_to 'Orders', orders_path(collection_id: collection.id), class: "" %>
      <%= link_to 'Tasks', tasks_path(collection_id: collection.id), class: "" %>
    </div>
  </td>
</tr>
