<tr>
  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <%= image_tag collection.icon_url, class: "w-12 h-12 block mx-auto" %>
  </td>

  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <%= collection.name %>
  </td>

  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <div class="flex items-center space-x-2">
      <div class="w-2 h-2 rounded-full
        <%= {
          drafted: 'bg-blue-500',
          listed: 'bg-green-500'
        }[collection.state.to_sym] %>"></div>
      <div><%= collection.state %></div>
    </div>
  </td>

  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <%= collection.items.count %>
  </td>
  <td class="border border-slate-300 dark:border-slate-700 p-2 text-slate-500 dark:text-slate-400">
    <div class="flex items-center space-x-2">
      <%= link_to 'Trident', collection.trident_url, class: "", target: "_blank" if collection.listed? %>
      <%= link_to 'Edit', edit_collection_path(collection.id), class: "" %>
      <%= link_to 'Items', collection_items_path(collection.id), class: "" %>
      <%= link_to 'Orders', collection_orders_path(collection.id), class: "" %>
      <%= link_to 'Tasks', collection_tasks_path(collection.id), class: "" %>
    </div>
  </td>
</tr>
