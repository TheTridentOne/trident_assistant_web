
<div class="mb-4 flex items-center">
  <%= link_to 'Items', 
    items_path(collection_id: collection.id), 
    class: "px-4 py-2 border-b-2 #{tab == 'items' ? 'text-bold text-primary border-primary' : 'hover:text-bold hover:text-primary border-slate-200'}" %>

  <%= link_to 'Attachments', 
    collection_attachments_path(collection), 
    class: "px-4 py-2 border-b-2 #{tab == 'attachments' ? 'text-bold text-primary border-primary' : 'hover:text-bold hover:text-primary border-slate-200'}" %>

  <%= link_to 'Orders', 
    orders_path(collection_id: collection.id), 
    class: "px-4 py-2 border-b-2 #{tab == 'orders' ? 'text-bold text-primary border-primary' : 'hover:text-bold hover:text-primary border-slate-200'}" %>

  <%= link_to "Tasks(#{current_user.tasks.pending.count})", 
    tasks_path(collection_id: collection.id), 
    class: "px-4 py-2 border-b-2 #{tab == 'tasks' ? 'text-bold text-primary border-primary' : 'hover:text-bold hover:text-primary border-slate-200'}" %>
</div>
