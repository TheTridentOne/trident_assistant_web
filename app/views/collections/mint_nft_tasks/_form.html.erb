<%= form_for [task.collection, task] do |form| %>
  <%= form.hidden_field :type, value: 'MintNftTask' %>
  <%= form.hidden_field :collection_id %>
  <% (identifiers || []).each do |identifier| %>
    <%= form.hidden_field :identifiers, multiple: true, value: identifier %>
  <% end %>

  <div class="mt-8 flex justify-center items-center space-x-4">
    <%= form.submit 'Confirm', class: "bg-primary px-6 py-2 rounded text-white cursor-pointer opacity-90 hover:opacity-100" %>
  </div>
<% end %>
